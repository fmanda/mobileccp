<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neutral"
    android:orientation="vertical"
    android:paddingBottom="1dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="top|left"
                        android:padding="5dp"
                        android:paddingStart="15dp"
                        android:text="Product Name"
                        android:textAlignment="gravity"
                        android:textColor="@color/teal_700"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtSKU"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="bottom"
                        android:paddingHorizontal="15dp"
                        android:paddingEnd="15dp"
                        android:text="SKU"
                        android:textAlignment="gravity"
                        android:textColor="@color/darker_grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="bottom"
                        android:paddingHorizontal="15dp"
                        android:paddingEnd="15dp"
                        android:text="Principal Name - Merk"
                        android:textAlignment="gravity"
                        android:textColor="@color/darker_grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="bottom"
                        android:paddingHorizontal="15dp"
                        android:paddingEnd="15dp"
                        android:text="CTN @000"
                        android:textAlignment="gravity"
                        android:textColor="@color/darker_grey"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtUOM3"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="0"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="PCS"
                            android:textAlignment="center"
                            android:textColor="@color/darker_grey"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="0"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/darker_grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtUOM2"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="0"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="BOX"
                            android:textAlignment="center"
                            android:textColor="@color/darker_grey"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="0"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/darker_grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtUOM1"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="0"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="CTN"
                            android:textAlignment="center"
                            android:textColor="@color/darker_grey"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtQty3"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="@color/teal_700"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/teal_700"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtQty2"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="@color/teal_700"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/teal_700"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtQty1"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="@color/teal_700"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnExpand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@null"
                        android:clickable="false"
                        app:srcCompat="@drawable/ic_expand_more_dark" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/lnEditQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:focusedByDefault="false"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUOM3Price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="clip_vertical|center_horizontal|center_vertical"
                        android:text="PCS/@000"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/uom3Operation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnMin3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:background="@null"
                            app:srcCompat="@drawable/ic_btn_min" />

                        <EditText
                            android:id="@+id/txtEdQty3"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:ems="10"
                            android:enabled="false"
                            android:inputType="number"
                            android:text="000"
                            android:textAlignment="center"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnAdd3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:focusable="auto"
                            app:srcCompat="@drawable/ic_btn_plus" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/txtUOM2Price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="PCS/@000"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/uom2Operation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageButton
                            android:id="@+id/btnMin2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:background="@null"
                            app:srcCompat="@drawable/ic_btn_min" />

                        <EditText
                            android:id="@+id/txtEdQty2"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:ems="10"
                            android:enabled="false"
                            android:inputType="number"
                            android:text="000"
                            android:textAlignment="center"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnAdd2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:focusable="auto"
                            app:srcCompat="@drawable/ic_btn_plus" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUOM1Price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="clip_vertical|center_horizontal|center_vertical"
                        android:text="CTN/@000"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/uom1Operation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnMin1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:background="@null"
                            app:srcCompat="@drawable/ic_btn_min" />

                        <EditText
                            android:id="@+id/txtEdQty1"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:ems="10"
                            android:enabled="false"
                            android:inputType="number"
                            android:text="000"
                            android:textAlignment="center"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnAdd1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:focusable="auto"
                            app:srcCompat="@drawable/ic_btn_plus" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>