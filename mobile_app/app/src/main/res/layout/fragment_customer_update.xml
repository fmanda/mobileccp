    <LinearLayout
        android:id="@+id/lnCustomer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_bg"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="12dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:labelFor="@id/txtNama"
            android:text="Nama Lengkap"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background_round_neutral"
            android:ems="10"
            android:inputType="text"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:labelFor="@id/txtPhone"
            android:text="No. Telepon"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background_round_neutral"
            android:ems="10"
            android:inputType="text"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:labelFor="@id/txtNIK"
            android:text="Nomor KTP"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtNIK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background_round_neutral"
            android:ems="10"
            android:inputType="text"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:labelFor="@id/txtKecamatan"
            android:text="Kecamatan"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtKecamatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background_round_neutral"
            android:ems="10"
            android:inputType="text"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:labelFor="@id/txtKelurahan"
            android:text="Kelurahan"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtKelurahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background_round_neutral"
            android:ems="10"
            android:inputType="text"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:labelFor="@id/txtAlamat"
            android:text="Alamat"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background_round_neutral"
            android:ems="10"
            android:inputType="text|textMultiLine"
            android:lines="2"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>